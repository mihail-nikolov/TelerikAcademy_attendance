@model IEnumerable<FitnessSystem.Data.Models.Category>
@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>
<div id="toUpdate">
    @Ajax.ActionLink("Create new", "Create", "Categories", new AjaxOptions
{
    UpdateTargetId = "toUpdate",
    InsertionMode = InsertionMode.Replace
},
    new
    {
        @class = "btn btn-primary"
    })
</div>

@foreach (var category in Model)
{
    <h3>@category.Name</h3>
    if (category.Exercises.Count != 0)
    {
        foreach (var exercise in category.Exercises)
        {
            <div class="row">
                <a href="~/Exercises/Details/@exercise.Id">@exercise.Title</a>
            </div>
        }
    }
    else
    {
        <div class="row text-danger">
            No Exercises Added in This category
        </div>
    }
}

@Scripts.Render("~/bundles/jquery")
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>