extends ../shared/layout
block main-content
    .jumbotron
        h1.text-center #{currentUser.username}
        .row
            .col-md-6
                img(src=currentUser.img id="profile-img")
                br
                form(method="post" id="form-upload" enctype="multipart/form-data" action="/profile").row
                    .col-md-10
                        input(type="file" class="filestyle" data-buttonName="btn-primary" name="avatar")
                    .col-md-2  
                        input(type="submit" class="btn btn-primary")
            .col-md-6
                h3 Email: #{currentUser.email}
                h3 Wins: #{currentUser.wins}
                h3 Losses: #{currentUser.losses}

        include scripts