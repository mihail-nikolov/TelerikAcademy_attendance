extends ../shared/layout
block main-content
    form(method="post")
        label(for="title") Title
        input(id="title" class="form-control" type="text" name="title" placeholder="Title")
        br
        label(for="description") Description
        input(id="description" class="form-control" type="text" name="description" placeholder="Description")
        br
        label(for="category") Category
        select(id="category" class="form-control" name="category")
            option(value="") Choose Category (not Wisely)
            each category in categories
                option(value="#{category}") #{category}
        br
        label(for="public") Public
            select(id="public" class="form-control" name="public")
                option(value='true') Yes
                option(value='false') No
            br
        input(type="submit" class="btn btn-lg" value="Create")