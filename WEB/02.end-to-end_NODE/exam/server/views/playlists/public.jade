extends ../shared/layout
block main-content
    .container
        .row
            .col-md-6.col-md-offset-3
                h1.text-center Public playlists
                br
                table.table-bordered.table
                    tr
                        th Title
                        th Creator
                        th Operations
                    each playlist in data.playlists
                        tr
                            td #{playlist.title}
                            td #{playlist.creator}
                            td
                                a.btn.btn-lg.btn-primary(href="/playlists/details/#{playlist._id}") View
                br
                ul.list-unstyled.list-inline.text-center
                    - for(var i = 1; i <= data.total / data.pageSize; i++)
                    li
                        a.btn.btn-lf.btn-primary(href="/playlists/active?page=#{i}&pageSize=#{data.pageSize}") #{i}