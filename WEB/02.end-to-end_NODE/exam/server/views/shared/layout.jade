doctype
html
    head
        title Telerik playlist system
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav
        .container
            .navbar-header
                a.navbar-brand(href="/") Playlist System
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href="/playlists/public") Public Playlists
                    if (currentUser)
                        li
                            a(href="/playlists/create") Create PlayList
                        li
                            a(href="/playlists/private") Private PlayList
                        li
                            a(href="/playlists/mine") My PlayLists
                        li
                            a(href="/profile") #{currentUser.firstName}
                        li
                            a(href="/logout") Logout
                    if (!currentUser)
                        li
                            a(href="/register") Register
                        li
                            a(href="/login") Login

        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}

            block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2016

        include scripts