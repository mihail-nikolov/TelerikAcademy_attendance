
<h2>TODOs</h2>
<a href="#/todos/add">Add new</a>
{{#each this}}
<h3>
  <a href="#/todos?category={{category}}">{{category}}</a>
</h3>

<div class="todo-box" data-id="{{id}}">

    {{#if state}}
    <input type="checkbox" checked="" />
    {{else}}
    <input type="checkbox" />
    {{/if}}
    <strong>{{text}}</strong>

</div>

{{/each}}
